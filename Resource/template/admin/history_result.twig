{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['customer', 'mailmagazine', 'mailmagazine_history'] %}

{% block title %}{{ 'plugin.mailmagazine.history.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'plugin.mailmagazine.title'|trans }}{% endblock %}

{% block main %}
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="card rounded border-0 mb-4">
                    {% if pagination and pagination.totalItemCount > 0 %}
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip">
                                        <span class="card-title">
                                            {{ 'plugin.mailmagazine.history.result.number_record'|trans }} <span class="normal"><strong>{{ pagination.totalItemCount }}</strong>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-4 text-right">
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-between mb-2">
                            <div class="col-6"></div>

                            <div class="col-5 text-right">
                                {#Dropdown page count#}
                                <div class="d-inline-block mr-2">
                                    <select class="custom-select" onchange="location = this.value;">
                                        {% for pageMax in pageMaxis %}
                                            <option {% if pageMax.name == page_count%} selected {% endif %}
                                                    value="{{ path('plugin_mail_magazine_history_result_page', {'id': historyId, 'page_no': 1, 'page_count': pageMax.name}) }}">
                                                {{ pageMax.name|e }}{{ 'common.label.num'|trans }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="d-inline-block">
                                    <div class="btn-group" role="group"></div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body mb-lg-5">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="border-top-0 pt-2 pb-2">{{ 'ステータス'|trans }}</th>
                                        <th class="border-top-0 pt-2 pb-2">{{ '会員ID'|trans }}</th>
                                        <th class="border-top-0 pt-2 pb-2">{{ '送信先'|trans }}</th>
                                        <th class="border-top-0 pt-2 pb-2">{{ '名前'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for result in pagination %}
                                    <tr>
                                        <td class="align-middle text-left">
                                            {% if result.status == '0' %}
                                                <span class="badge badge-ec-blue">未送信</span>
                                            {% elseif result.status == '1' %}
                                                <span class="badge badge-ec-green">送信済み</span>
                                            {% elseif result.status == '2' %}
                                                <span class="badge badge-ec-red">送信失敗</span>
                                            {% else %}
                                                {{ result.status }}
                                            {% endif %}
                                        </td>
                                        <td class="align-middle text-left">{{ result.customerId }}</td>
                                        <td class="align-middle text-left">{{ result.email }}</td>
                                        <td class="align-middle text-left">{{ result.name }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="card-body mb-lg-5">
                            <div class="row">
                                <div class="col-auto">
                                    {{ 'plugin.mailmagazine.history.result.no_record'|trans }}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="c-conversionArea">
        <div class="c-conversionArea__container">
            <div class="row justify-content-between align-items-center">
                <div class="col-6">
                    <div class="c-conversionArea__leftBlockItem">
                        <a class="c-beseLink" href="{{ url('plugin_mail_magazine_history') }}">
                            <i class="fa fa-backward" aria-hidden="true"></i><span>{{ 'plugin.mailmagazine.history.preview.btn_back'|trans }}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
